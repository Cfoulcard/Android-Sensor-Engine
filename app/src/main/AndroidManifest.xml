<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.soundtechsensors"
    tools:ignore="ExtraText">

    <!--Add app intent link-->

    <!-- https://developer.android.com/guide/components/fundamentals#DeclaringRequirements
     Above link for declaring app requirements on Google Play -->

<!-- Record Audio is listed as a Dangerous Permission
 This will mean the user must explicitly grant access to use your feature-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        >

        <!--Sensor Selection Screen-->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Sound Sensor Activity-->
        <activity
            android:name=".Sensors.SoundSensorActivity"
            android:label="Sound Sensor"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <!--Temperature Sensor Activity-->
        <activity
            android:name=".Sensors.TemperatureActivity"
            android:label="Temperature Sensor"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <!--Light Sensor Activity-->
        <activity
            android:name=".Sensors.LightSensorActivity"
            android:label="Light Sensor"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <!--Ram Sensor Activity-->
        <activity
            android:name=".Sensors.RamActivity"
            android:label="Ram Sensor"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <!--Battery Sensor Activity-->
        <activity
            android:name=".Sensors.BatteryActivity"
            android:label="Battery Sensor"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <receiver android:name=".Sensors.BatteryActivity">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED"/>
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED"/>
            </intent-filter>
        </receiver>

        <!--Speed Sensor Activity-->
        <activity
            android:name=".Sensors.AccelerometerActivity"
            android:label="Speed Sensor"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <!--The following is for the menu items-->
        <activity android:name=".Menu_Items.Credits"
            android:label="Credits"

            android:screenOrientation="portrait"
            />

        <activity android:name=".Preferences.Configurations"
            android:label="Preferences"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name=".Menu_Items.About"
            android:label="About"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name=".Menu_Items.Premium"
            android:label="Premium"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name=".Preferences.SettingsActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:label="Preferences"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"/>
         />

    </application>
</manifest>