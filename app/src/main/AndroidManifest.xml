<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.christianfoulcard.android.androidsensorengine"
    tools:ignore="ExtraText" >
    <!-- Permissions -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:name="com.application.AndroidSensorEngine"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning" >

<!--        Home Screen and Launcher Name-->
        <activity
            android:name="com.androidsensorengine.ui.HomeScreenActivity"
            android:exported="true"
            android:label="@string/title_activity_new_home_screen"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ui.sensors.SoundSensor"
            android:label=""
            android:parentActivityName="com.androidsensorengine.ui.HomeScreenActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.ui.sensors.LightSensor"
            android:label=""
            android:parentActivityName="com.androidsensorengine.ui.HomeScreenActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.ui.sensors.PressureSensor"
            android:label=""
            android:parentActivityName="com.androidsensorengine.ui.HomeScreenActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

<!--        Delete Below-->

        <activity
            android:name="com.androidsensorengine.sensors.SensorSoundActivity"
            android:exported="true"
            android:label=""
            android:parentActivityName="com.HomeScreenActivity"
            android:screenOrientation="portrait" >
        </activity> <!-- Temperature Sensor Activity -->
        <activity
            android:name="com.androidsensorengine.sensors.SensorTemperatureActivity"
            android:label=""
            android:parentActivityName="com.HomeScreenActivity"
            android:screenOrientation="portrait" /> <!-- Light Sensor Activity -->
        <activity
            android:name="com.androidsensorengine.sensors.SensorLightActivity"
            android:label=""
            android:parentActivityName="com.HomeScreenActivity"
            android:screenOrientation="portrait" /> <!-- Ram Sensor Activity -->
        <activity
            android:name="com.androidsensorengine.sensors.SensorRamActivity"
            android:label=""
            android:parentActivityName="com.HomeScreenActivity"
            android:screenOrientation="portrait" /> <!-- Battery Sensor Activity -->
        <activity
            android:name="com.androidsensorengine.sensors.SensorBatteryActivity"
            android:label=""
            android:parentActivityName="com.HomeScreenActivity"
            android:screenOrientation="portrait" /> <!-- Speed Sensor Activity -->
        <activity
            android:name="com.androidsensorengine.sensors.SensorAccelerometerActivity"
            android:label=""
            android:parentActivityName="com.HomeScreenActivity"
            android:screenOrientation="portrait" /> <!-- Humidity Sensor Activity -->
        <activity
            android:name="com.androidsensorengine.sensors.SensorHumidityActivity"
            android:label=""
            android:parentActivityName="com.HomeScreenActivity"
            android:screenOrientation="portrait" /> <!-- Pressure Sensor Activity -->
        <activity
            android:name="com.androidsensorengine.sensors.SensorPressureActivity"
            android:label=""
            android:parentActivityName="com.HomeScreenActivity"
            android:screenOrientation="portrait" /> <!-- Steps Sensor Activity -->
        <activity
            android:name="com.androidsensorengine.sensors.SensorWalkActivity"
            android:label=""
            android:parentActivityName="com.HomeScreenActivity"
            android:screenOrientation="portrait" /> <!-- The following is for the menu items -->
        <activity
            android:name="com.preferences.SettingsActivity"
            android:label="@string/preferences"
            android:screenOrientation="portrait" />

    </application>

</manifest>