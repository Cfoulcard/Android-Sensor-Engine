<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.soundtechsensors">

    <!--Add app intent link-->

<!-- Record Audio is listed as a Dangerous Permission
 This will mean the user must explicitly grant access to use your feature-->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Sound Sensor Activity-->
        <activity
            android:name=".SoundSensorActivity"
            android:label="Sound Sensor"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <!--Temperature Sensor Activity-->
        <activity
            android:name=".TemperatureActivity"
            android:label="Temperature Sensor"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <!--Light Sensor Activity-->
        <activity
            android:name=".LightSensorActivity"
            android:label="Light Sensor"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <!--Ram Sensor Activity-->
        <activity
            android:name=".RamActivity"
            android:label="Ram Sensor"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <!--Battery Sensor Activity-->
        <activity
            android:name=".BatteryActivity"
            android:label="Battery Sensor"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <!--Speed Sensor Activity-->
        <activity
            android:name=".AccelerometerActivity"
            android:label="Speed Sensor"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
        </activity>

    </application>
</manifest>