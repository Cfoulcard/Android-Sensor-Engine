<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_gradient_dark"
    android:fillViewport="true"
    tools:context="com.christianfoulcard.android.androidsensorengine.Sensors.BatteryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/battery_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/anton_regular"
        android:text="@string/battery_sensor"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:onClick="showBatteryDialogPopup"
        app:layout_constraintStart_toEndOf="@+id/battery_sensor"
        app:layout_constraintTop_toTopOf="@+id/battery_sensor"
        app:srcCompat="@drawable/ic_question_icon" />

    <ImageView
        android:id="@+id/battery_logo"
        style="@style/MaterialAnimations"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:contentDescription="@string/battery_sensor"
        android:transitionName="@string/battery_anim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/battery_sensor"
        app:srcCompat="@drawable/ic_battery_icon_2" />

    <TextView
        android:id="@+id/battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/anton_regular"
        android:text="@string/battery"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/battery_logo"
        app:layout_constraintStart_toStartOf="@+id/battery_logo"
        app:layout_constraintTop_toBottomOf="@+id/battery_sensor" />

    <TextView
        android:id="@+id/current_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/anton_regular"
        android:text="@string/not_available"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/battery_logo"
        app:layout_constraintEnd_toEndOf="@+id/battery_logo"
        app:layout_constraintStart_toStartOf="@+id/battery_logo"
        app:layout_constraintTop_toBottomOf="@+id/battery" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:adSize="SMART_BANNER"
            app:adUnitId="ca-app-pub-3940256099942544/6300978111"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_battery"
            app:layout_constraintVertical_bias="0.708" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>