<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/drawable_gradient_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/battery_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/anton_regular"
        android:text="@string/battery_sensor"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:onClick="showBatteryDialogPopup"
        app:layout_constraintStart_toEndOf="@+id/battery_sensor"
        app:layout_constraintTop_toTopOf="@+id/battery_sensor"
        app:srcCompat="@drawable/ic_question_icon" />

    <ImageView
        android:id="@+id/battery_logo"
        style="@style/MaterialAnimations"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:contentDescription="@string/battery_sensor"
        android:transitionName="@string/battery_anim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/battery_sensor"
        app:srcCompat="@drawable/ic_battery_icon_2" />

    <TextView
        android:id="@+id/battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/anton_regular"
        android:text="@string/battery"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/battery_logo"
        app:layout_constraintStart_toStartOf="@+id/battery_logo"
        app:layout_constraintTop_toBottomOf="@+id/battery_sensor" />

    <TextView
        android:id="@+id/current_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/anton_regular"
        android:text="@string/not_available"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/battery_logo"
        app:layout_constraintEnd_toEndOf="@+id/battery_logo"
        app:layout_constraintStart_toStartOf="@+id/battery_logo"
        app:layout_constraintTop_toBottomOf="@+id/battery" />
</androidx.constraintlayout.widget.ConstraintLayout>